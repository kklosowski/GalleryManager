<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eterd.galleryv2" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.GalleryItemFullscreenActivity"
            android:theme="@style/Theme.Background" >
        </activity>
        <activity android:name=".Activities.CameraActivity" >
        </activity>
        <activity android:name=".Activities.TextComposeActivity" >
        </activity>
        <activity android:name=".Activities.FolderActivity" >
        </activity>
        <activity android:name=".Activities.GalleryActivity" >
        </activity>
        <activity android:name=".Activities.ImageEditActivity" >
        </activity>
    </application>

</manifest>
